    display: grid
    grid-gap: 14px
    margin-top: 38px
    grid-template-columns: repeat(2, 49.39%)
    grid-template-rows: 1fr 1fr
    > *
      width: 100%
      height: 330px
      display: block
      position: relative
      border-radius: 16px
      background-repeat: no-repeat
      &:after
        content: ""
        filter: blur(15px);
        left: 0
        right: 0
        top: 326px
        width: 80%
        height: 12px
        margin: 0 auto
        position: absolute
      span.version
        top: 18px
        right: 47px
        color: #FFFFFF
        font-weight: 500
        font-size: 120px
        position: absolute
        line-height: 103.2%
        letter-spacing: -0.04em
      .text
        width: 288px
        margin-left: 57px
        margin-top: 107px
        h5
          color: #FFFFFF
          font-weight: 600
          font-size: 24px
          line-height: 103.2%
          margin-bottom: 20px
        p
          font-weight: 600
          font-size: 15px
          line-height: 19px
          color: #FFFFFF
      .prise
        top: 207px
        right: 26px
        display: grid
        position: absolute
        span
          font-size: 22px
          color: #FFFFFF
          font-weight: bold
          line-height: 142.2%
          margin-bottom: 12px
        a
          width: 167px
          height: 47px
          display: flex
          color: #000000
          font-size: 14px
          font-weight: 600
          line-height: 17px
          border-radius: 6px
          align-items: center
          background: #FFFFFF
          justify-content: center
    .product-v65
