.logos-slider
  width: 85%
  margin-top: 70px
  position relative
:root
  --swiper-theme-color: none
.pagination
  margin-top: -50px
  display: flex
  align-items: center
  position relative
  .slide-next,
  .slide-prev
    z-index: 1
    width: 40px
    height: 40px
    display: flex
    outline: none
    cursor: pointer
    border-radius: 100%
    align-items: center
    justify-content: center
    background-color:#ffffff
    &:after
      content: ""
      width: 7.41px
      height: 12px
      background-image: url(../img/svg/arrow-slider.svg)
  .slide-next
    top: 0
    right: 0
    position: absolute
    &:after
      content: ""
      transform: rotate(180deg)
  .slide-prev
    top: 0
    left: 0
    position: absolute
  
.products
  margin-top: 120px
  h3
    margin-left: 57px
    font-weight: 500
    font-size: 24px
    line-height: 103.2%
